[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501, E402, F401, F541, F841
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    cache,
    cache/**,
    archived,
    archived/**,
    tests,
    tests/**,
    ws,
    ws/**,
    simple_ws_test_server.py,
    test_direct_bitfinex.py
