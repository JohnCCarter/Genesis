# ============================
# TradingBot Frontend Environment Variables (.env.example)
# ============================
# Detta är en mall för frontend-konfiguration. Kopiera till .env och fyll i egna värden.
# Rader som börjar med # är kommentarer och ignoreras av programmet.

# --- API Configuration ---
VITE_API_BASE=http://127.0.0.1:8000  # Backend API URL (måste matcha backend PORT)

# --- Development Settings ---
VITE_DEV_MODE=true                   # True = utvecklingsläge (mer debug-info)
VITE_DEBUG_ENABLED=true              # True = aktivera debug-paneler i UI

# --- Feature Flags (optional) ---
VITE_ENABLE_CIRCUIT_BREAKER=False    #True = visa circuit breaker-status
VITE_ENABLE_PERFORMANCE_MONITOR=true # True = visa performance-monitoring
VITE_ENABLE_RISK_PANEL=true          # True = visa risk-panel
VITE_ENABLE_TRADING_PANEL=true       # True = visa trading-panel

# --- UI Configuration (optional) ---
VITE_DEFAULT_REFRESH_INTERVAL=5000   # Standard refresh-intervall (ms)
VITE_MAX_RETRY_ATTEMPTS=3            # Max antal försök vid API-fel
VITE_REQUEST_TIMEOUT=10000           # Timeout för API-anrop (ms)

# --- Notifications (optional) ---
VITE_ENABLE_TOAST_NOTIFICATIONS=true # True = visa toast-notifieringar
VITE_ENABLE_CONSOLE_LOGGING=true     # True = logga till konsol i dev-läge
