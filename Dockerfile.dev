FROM python:3.11-slim

# Installera systemberoenden
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Kopiera requirements-fil
COPY tradingbot-backend/requirements.txt /app/requirements.txt

# Installera Python-beroenden
RUN pip install --upgrade pip \
    && pip install -r /app/requirements.txt

# Kopiera projektfiler
COPY . /app
WORKDIR /app

# Exponera portar
EXPOSE 8000 3000

# Standardkommando
CMD ["uvicorn", "tradingbot-backend.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
